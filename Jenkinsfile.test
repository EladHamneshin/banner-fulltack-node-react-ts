pipeline {
    agent any

    stages {
        stage('Parallel Stage') {
            parallel {
                stage('Install and Test Client') {
                    steps {
                        dir('client') {
                            script {
                                echo 'Installing dependencies...'
                                sh 'npm install'
                                echo 'Running tests...'
                                sh 'npm run test'
                            }
                        }
                    }
                }

                stage('Install and Test Server') {
                    steps {
                        dir('server') {
                            script {
                                echo 'Installing dependencies...'
                                sh 'npm install'
                                echo 'Running tests...'
                                sh 'npm run test'
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                // Set commit status to success
                echo 'Tests passed.'
                githubCommitStatus(
                    context: 'ESLINT-banners',
                    state: 'SUCCESS',
                    message: 'Build and tests passed',
                )
            }
        }
        failure {
            script {
                echo 'Tests failed.'
                githubCommitStatus(
                    context: 'ESLINT-banners',
                    state: 'FAILURE',
                    message: 'Build and tests failed',
                )
            }
        }
    }

    triggers {
        githubPush()
    }
}
