pipeline {
    agent any

    stages {
        stage('Install and Test Client') {
            steps {
                script {
                    dir('client') {
                        echo 'Installing dependencies...'
                        sh 'npm install'
                        echo 'Running tests...'
                        sh 'npm run test'
                    }
                }
            }
        }

        stage('Install and Test Server') {
            steps {
                script {
                    dir('server') {
                        echo 'Installing dependencies...'
                        sh 'npm install'
                        echo 'Running tests...'
                        sh 'npm run test'
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                // Notify success to GitHub
                echo 'Tests passed.'
                githubNotify description: 'This is a shorted example',  status: 'SUCCESS'

            }
        }
        failure {
            script {
                // Notify failure to GitHub
                echo 'Tests failed.'
                githubNotify description: 'This is a shorted example',  status: 'FAILURE'

            }
        }
    }

    triggers {
        githubPush()
    }
}
